---
import { Icon } from 'astro-icon/components';
import Container  from '../core/Container.astro';
import Plug from './Plug.astro';

const { footerSocials, footerLists, copyrightName, background, color, showPlug: showPlug = true } =
  Astro.props;
---

<footer
  style={background && `--footer-bg:${background}; --footer-color:${color}`}
>
  <Container>
    <div class="footer-grid__container">
      <div class="footer-brand__container">
        <div>
          <slot name="logo" />
        </div>
        <ul class="footer-socials__list">
          {
            footerSocials.map((social) => (
              <li class="footer-socials__item">
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="footer-socials__link"
                  title={`Open ${social.name} profile`}
                >
                  <Icon name={social.icon} width={24} height={24} />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      {
        footerLists.map((list) => (
          <div>
            <p><strong>{list.title}</strong></p>
            <ul class="footer-link__list">
              {list.items.map((item) => (
                <li>
                  <a href={item.slug}>{item.title}</a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
    <div class="footer-copyright__container">
      {showPlug && <Plug/>}
      <p>Copyright &copy; {new Date().getFullYear()} {copyrightName}</p>
    </div>

  </Container>
</footer>

<style>
  footer {
    --footer-bg: var(--theme-surface-1);
    --footer-color: var(--theme-on-surface-1);
    background-color: var(--footer-bg);
    color: var(--footer-color);
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }
  .footer-grid__container {
    padding: 3rem 0 2rem 0;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 2rem;
  }
  .footer-socials__list {
    margin: 1rem 0;
    padding: 0;
    display: flex;
    list-style: none;
  }
  .footer-socials__item {
    margin-right: 0.5rem;
  }
  .footer-link__list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .footer-link__list li {
    margin-bottom: 0.5rem;
  }
  .footer-link__list li a {
    text-decoration: none;
  }
  .footer-link__list li a:hover {
    opacity: 0.84;
  }
  .footer-copyright__container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    margin-top: 1rem;
  }
  .footer-copyright__container p {
    font-size: 0.875rem;
    margin: 0;
    opacity: 0.7;
  }
  @media (max-width: 768px) {
    .footer-grid__container :first-child {
      grid-column: 1/-1;
    }
    .footer-grid__container {
      padding: 2rem 0 1.5rem 0;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }
  @media (max-width: 600px) {
    .footer-grid__container {
      padding: 2rem 0 1.5rem 0;
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    .footer-copyright__container {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>