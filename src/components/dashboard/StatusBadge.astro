---
export interface Props {
  status: 'success' | 'error' | 'running' | 'waiting' | 'canceled';
  label?: string;
}

const { status, label } = Astro.props;
const statusLabels = {
  success: 'Success',
  error: 'Error',
  running: 'Running',
  waiting: 'Waiting',
  canceled: 'Canceled'
};
---

<span class="status-badge" data-status={status}>
  {label || statusLabels[status]}
</span>

<style>
  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: capitalize;
  }

  .status-badge[data-status="success"] {
    background: #dcfce7;
    color: #166534;
  }

  .status-badge[data-status="error"] {
    background: #fee2e2;
    color: #991b1b;
  }

  .status-badge[data-status="running"] {
    background: #dbeafe;
    color: #1e40af;
  }

  .status-badge[data-status="waiting"] {
    background: #fef3c7;
    color: #92400e;
  }

  .status-badge[data-status="canceled"] {
    background: #f3f4f6;
    color: #374151;
  }
</style>

