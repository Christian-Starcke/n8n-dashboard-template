---
import Layout from '../../layouts/Page.astro';
import { Container, Button, FormInput } from '@components/odyssey-theme';
import StatusBadge from '../../components/dashboard/StatusBadge.astro';

const seo = {
  title: 'Upload CSV | Dashboard',
  description: 'Upload and import CSV files',
};
---

<Layout {seo}>
  <Container>
    <div class="upload-header">
      <div>
        <h1>Upload CSV</h1>
        <p class="upload-subtitle">Import data from CSV files into your dashboard</p>
      </div>
    </div>

    <div class="upload-section">
      <div class="upload-card">
        <div class="upload-card__header">
          <h2>Upload File</h2>
          <p class="upload-card__description">
            Select a CSV file to upload. Supported formats: .csv, .txt
          </p>
        </div>

        <form class="upload-form" method="post" enctype="multipart/form-data">
          <div class="upload-form__field">
            <label for="csv-file" class="upload-form__label">
              Choose CSV File
            </label>
            <input
              type="file"
              id="csv-file"
              name="csv-file"
              accept=".csv,.txt"
              class="upload-form__input"
              required
            />
            <p class="upload-form__hint">
              Maximum file size: 10MB. File should contain headers in the first row.
            </p>
          </div>

          <div class="upload-form__field">
            <label for="import-type" class="upload-form__label">
              Import Type
            </label>
            <select id="import-type" name="import-type" class="upload-form__select" required>
              <option value="">Select import type...</option>
              <option value="leads">Leads</option>
              <option value="calls">Call History</option>
              <option value="contacts">Contacts</option>
              <option value="custom">Custom Data</option>
            </select>
          </div>

          <div class="upload-form__field">
            <label class="upload-form__checkbox-label">
              <input
                type="checkbox"
                name="skip-duplicates"
                class="upload-form__checkbox"
                checked
              />
              <span>Skip duplicate records</span>
            </label>
          </div>

          <div class="upload-form__actions">
            <Button type="submit" variant="primary">Upload & Import</Button>
            <Button type="button" variant="outline" href="/upload-csv/template">
              Download Template
            </Button>
          </div>
        </form>
      </div>

      <div class="upload-info">
        <h3>Upload Guidelines</h3>
        <ul class="upload-info__list">
          <li>CSV files must have headers in the first row</li>
          <li>Use comma (,) as the delimiter</li>
          <li>Text fields containing commas should be wrapped in quotes</li>
          <li>Date fields should be in YYYY-MM-DD format</li>
          <li>Maximum file size is 10MB</li>
        </ul>

        <h3>Recent Uploads</h3>
        <div class="upload-history">
          <div class="upload-history__item">
            <div class="upload-history__info">
              <strong>leads_import_2024.csv</strong>
              <span class="upload-history__meta">Leads • 245 records • 2 hours ago</span>
            </div>
            <StatusBadge status="success" label="Completed" />
          </div>
          <div class="upload-history__item">
            <div class="upload-history__info">
              <strong>calls_export.csv</strong>
              <span class="upload-history__meta">Call History • 1,234 records • 1 day ago</span>
            </div>
            <StatusBadge status="success" label="Completed" />
          </div>
        </div>
      </div>
    </div>
  </Container>
</Layout>

<style>
  .upload-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .upload-header h1 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--theme-on-bg);
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .upload-subtitle {
    font-size: 1rem;
    color: var(--theme-on-bg);
    opacity: 0.7;
    margin: 0;
    line-height: 1.5;
  }

  .upload-section {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
  }

  .upload-card {
    background: var(--theme-surface-1);
    border-radius: var(--theme-shape-radius);
    padding: 2rem;
  }

  .upload-card__header {
    margin-bottom: 2rem;
  }

  .upload-card__header h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--theme-on-surface-1);
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .upload-card__description {
    font-size: 0.9375rem;
    color: var(--theme-on-surface-1);
    opacity: 0.7;
    margin: 0;
    line-height: 1.5;
  }

  .upload-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .upload-form__field {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .upload-form__label {
    font-weight: 500;
    color: var(--theme-on-surface-1);
    font-size: 0.9375rem;
  }

  .upload-form__input {
    padding: 0.75rem 1rem;
    border: 2px solid rgba(0, 0, 0, 0.1);
    border-radius: 0.5rem;
    font-size: 1rem;
    background: var(--theme-bg);
    color: var(--theme-on-bg);
    transition: border-color var(--theme-transition);
  }

  .upload-form__input:focus {
    outline: none;
    border-color: var(--theme-primary);
  }

  .upload-form__select {
    padding: 0.75rem 1rem;
    border: 2px solid rgba(0, 0, 0, 0.1);
    border-radius: 0.5rem;
    font-size: 1rem;
    background: var(--theme-bg);
    color: var(--theme-on-bg);
    transition: border-color var(--theme-transition);
  }

  .upload-form__select:focus {
    outline: none;
    border-color: var(--theme-primary);
  }

  .upload-form__hint {
    font-size: 0.875rem;
    color: var(--theme-on-surface-1);
    opacity: 0.6;
    margin: 0;
  }

  .upload-form__checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    font-size: 0.9375rem;
    color: var(--theme-on-surface-1);
  }

  .upload-form__checkbox {
    width: 1.25rem;
    height: 1.25rem;
    cursor: pointer;
  }

  .upload-form__actions {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .upload-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .upload-info h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--theme-on-bg);
    margin: 0 0 0.75rem 0;
  }

  .upload-info__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .upload-info__list li {
    padding-left: 1.5rem;
    position: relative;
    color: var(--theme-on-bg);
    opacity: 0.8;
    line-height: 1.6;
  }

  .upload-info__list li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--theme-primary);
    font-weight: bold;
  }

  .upload-history {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .upload-history__item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: var(--theme-surface-1);
    border-radius: var(--theme-shape-radius);
    gap: 1rem;
  }

  .upload-history__info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
  }

  .upload-history__info strong {
    color: var(--theme-on-surface-1);
    font-weight: 600;
    font-size: 0.875rem;
  }

  .upload-history__meta {
    font-size: 0.8125rem;
    color: var(--theme-on-surface-1);
    opacity: 0.6;
  }

  @media (max-width: 1024px) {
    .upload-section {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .upload-header h1 {
      font-size: 1.75rem;
    }

    .upload-card {
      padding: 1.5rem;
    }

    .upload-form__actions {
      flex-direction: column;
    }

    .upload-form__actions :global(button) {
      width: 100%;
    }
  }
</style>

